{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "dependsOn": ["clean"],
            "group": {
                    "kind": "build",
                    "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "UNFLoader -r Quasar64.z64",
            "dependsOn": ["build"],
            "group": {
                    "kind": "test",
                    "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
